{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es6", "es2015.iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["src/*"],
      "test/*": ["test/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
